{
    "productName": "Spark",
    "version": "0.1.0",
    "identifier": "com.spark.app",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../dist"
    },
    "app": {
        "security": {
            "capabilities": [
                "default"
            ]
        },
        "windows": [
            {
                "title": "Spark",
                "width": 1200,
                "height": 800,
                "minWidth": 900,
                "minHeight": 650,
                "resizable": true,
                "fullscreen": false,
                "transparent": false,
                "decorations": false,
                "visible": false,
                "label": "main"
            },
            {
                "label": "popup",
                "title": "Spark Popup",
                "width": 400,
                "height": 300,
                "decorations": false,
                "transparent": true,
                "alwaysOnTop": true,
                "skipTaskbar": true,
                "visible": false,
                "url": "/popup"
            }
        ]
    },
    "bundle": {
        "active": true,
        "targets": [
            "msi",
            "nsis"
        ]
    }
}